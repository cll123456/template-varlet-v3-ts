{
  "name": "template-varlet-v3-ts",
  "private": false,
  "homepage": "./",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build --base=/template-varlet-v3-ts/",
    "preview": "vite preview",
    "deploy": "deploy.sh",
    "eslint": "eslint --ext .js,ts,.vue --fix src",
    "prettier": "prettier . --write"
  },
  "dependencies": {
    "@varlet/ui": "^1.27.8",
    "pinia": "^2.0.14",
    "vue": "^3.2.36",
    "vue-router": "^4.0.15"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.1.17",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@unocss/preset-attributify": "^0.34.0",
    "@unocss/preset-icons": "^0.34.0",
    "@unocss/preset-typography": "^0.34.0",
    "@unocss/preset-web-fonts": "^0.34.0",
    "@unocss/reset": "^0.34.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^9.0.1",
    "lint-staged": "^12.4.1",
    "picocolors": "^1.0.0",
    "postcss-px-to-viewport": "^1.1.1",
    "prettier": "^2.6.2",
    "simple-git-hooks": "^2.7.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4",
    "unocss": "^0.34.0",
    "unplugin-auto-import": "^0.7.2",
    "unplugin-vue-components": "^0.19.5",
    "vite": "^2.9.9",
    "vite-plugin-pages": "^0.23.0",
    "vue-tsc": "^0.34.16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec ts-node scripts/verifyCommit.ts $1"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "pnpm run eslint",
      "pnpm run prettier"
    ]
  }
}
