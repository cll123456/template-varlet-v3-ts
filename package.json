{
  "name": "template-varlet-v3-ts",
  "private": false,
  "version": "1.0.0",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "eslint": "eslint --ext .js,ts,.vue --ignore-path .gitignore --fix src",
    "prettier": "prettier . --write"
  },
  "dependencies": {
    "@varlet/ui": "^1.26.8",
    "vue": "^3.2.25",
    "vue-router": "^4.0.13"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.1.4",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@unocss/preset-attributify": "^0.30.3",
    "@unocss/preset-icons": "^0.30.3",
    "@unocss/preset-typography": "^0.30.3",
    "@unocss/preset-web-fonts": "^0.30.3",
    "@unocss/reset": "^0.30.3",
    "@vitejs/plugin-vue": "^2.2.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.5.0",
    "lint-staged": "^12.3.7",
    "postcss-px-to-viewport": "^1.1.1",
    "prettier": "^2.6.1",
    "simple-git-hooks": "^2.7.0",
    "typescript": "^4.5.4",
    "unocss": "^0.30.3",
    "unplugin-auto-import": "^0.6.6",
    "unplugin-vue-components": "^0.18.4",
    "vite": "^2.8.0",
    "vite-plugin-pages": "^0.22.0",
    "vue-tsc": "^0.29.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec ts-node scripts/verifyCommit.ts $1"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "pnpm run eslint",
      "pnpm run prettier"
    ]
  }
}
